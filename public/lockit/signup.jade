extend /layout

block content
  div.row
    div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3
      div.panel.panel-default
        div.panel-heading 用户注册
        div.panel-body
          form(action="/signup", method="POST", autocomplete="off")
            input(type="hidden", name="_csrf", value=_csrf)
            div.form-group
              label(for="name") 用户名
              input.form-control(type="text", id="name", name="name", value=name, placeholder="您的用户名")
            div.form-group
              label(for="email") 邮箱
              input.form-control(type="email", id="email", name="email", value=email, placeholder="您的邮箱")
            div.form-group
              label(for="password") 密码
              input.form-control(type="password", id="password", name="password", placeholder="请创建密码")
            div.form-group
              label(for="password") 确认密码
              input.form-control(type="password", id="password2", name="password2", placeholder="确认密码")
            if error
              div.alert.alert-warning #{error}
            input(type="submit", class="btn btn-primary btn-block", value="提交")
          div.text-center(style="margin-top: 15px;")
            small: a(href="/signup/resend-verification") 重新发送邮件
